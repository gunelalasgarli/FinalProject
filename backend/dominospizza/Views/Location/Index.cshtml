@model List<Location>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 col-md-12 col m-2 map">
            <iframe src="https://snazzymaps.com/embed/359536" style="border:none; width:100%; height:400px;"></iframe>
        </div>
        <div class="col-lg-3 col-md-12 m-2 loc">

            <ul class="loc-list mt-2">
                @foreach (var item in Model)
                {
                    <li class="loc-list-item">
                        <a href="">
                            <h5 class="item-title">@item.Name</h5>
                            <p class="item-address">@item.Address</p>
                            <p class="item-whour"><i class="fas fa-clock"></i> Açılır @item.OpeningTime - Bağlanır @item.ClosingTime</p>
                        </a>
                        <a href="index.html" class="btn btn-danger"><i class="fas fa-shopping-cart"></i> Indi Sifariş Ver</a>
                        <a href="tel:*@item.Phone" class="btn btn-primary"><i class="fas fa-phone"></i> Zəng et</a>
                    </li>
                }
            </ul>
        </div>
    </div>
</div>
