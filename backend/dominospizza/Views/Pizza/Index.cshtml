@model List<Product> 
@{
    ViewData["Title"] = "Index";
    int count = 0;
}

<div class="container">
    @foreach (ProductType type in ViewBag.Types)
    {
        count++;
        <div class="row" id=@("scrollspyHeading"+count)>
            @foreach (Product item in Model.Where(p => p.ProductTypeId == type.Id))
            {
                <div class="col-lg-3 col-md-4 col-sm-6 col-xs-12">
                    <a asp-controller="pizza" asp-action="detail" asp-route-id="@item.Id" data-bs-toggle="modal" data-bs-target="#exampleModal">
                        <div class="pizza-item">
                            <div class="pizza-item-img">
                                <img src="~/img/Product/@item.Image" alt="That's an image">

                            </div>
                            <div class="pizza-item-text">
                                <div class="text-head">
                                    <h4>@item.Name</h4>
                                </div>
                                <div class="text-description">
                                    <p>@item.Description</p>
                                </div>
                                <div class="price d-grid">
                                    <h6>@item.Price.ToString("F2")AZN</h6>
                                    <span>-dan başlayaraq</span>
                                </div>
                            </div>
                        </div>
                    </a>

                </div>
            }
        </div>
    }
<div class="modal fade modalHeader" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="container">
                    <div class="row">
                        <div class="img-modal col-xs-12 col-sm-4 col-md-4 col-lg-5">
                            <img src="img/pizza/pizza1.jpg" alt="">
                        </div>
                        <div class="info-modal col-xs-12 col-sm-7 col-md-7 col-lg-6">
                            <h4 class="pizza-name">askjlajda</h4>
                            <p class="ingridients">djadjaodjao[dja</p>
                            <hr>
                            <div class="row">
                                <div class="count">

                                    <div class="input-group">
                                        <span class="input-group-btn">
                                            <button type="button" class="quantity-left-minus btn btn-danger btn-number" data-type="minus" data-field="">
                                                <span><i class="fa fa-minus" aria-hidden="true"></i></span>
                                            </button>
                                        </span>
                                        <input type="text" id="quantity" name="quantity" class="form-control input-number" value="1" min="1" max="100">
                                        <span class="input-group-btn">
                                            <button type="button" class="quantity-right-plus btn btn-danger btn-number" data-type="plus" data-field="">
                                                <span><i class="fa fa-plus" aria-hidden="true"></i></span>
                                            </button>
                                        </span>
                                    </div>

                                </div>
                                <div class="total-price text-center">
                                    <h6 id="total-price">10.90AZN</h6>
                                </div>
                                <div data-id="3" class="btn btn-lg btn-outline-danger addToCart">
                                    SƏBƏTƏ ƏLAVƏ ET
                                </div>
                            </div>
                            <hr>
                            <div class="scrollable row">
                                <h6 class="title">Ölçü seçin</h6>
                                <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                    <input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" checked>
                                    <label class="btn btn-outline-primary" for="btnradio1"><img src="img/pizza/small.png" alt=""><br>Kiçik<br> <span>10.90AZN</span></label>

                                    <input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="btnradio2"><img src="img/pizza/medium.png" alt=""><br>Orta<br> <span>17.90AZN</span></label>

                                    <input type="radio" class="btn-check" name="btnradio" id="btnradio3" autocomplete="off">
                                    <label class="btn btn-outline-primary" for="btnradio3"><img src="img/pizza/extra.png" alt=""><br>Böyük<br> <span>23.90AZN</span></label>
                                </div>
                                <hr>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
</div>