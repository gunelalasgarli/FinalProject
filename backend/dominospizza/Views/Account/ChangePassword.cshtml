@model ResetPasswordVM
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Şifrəmi unutmuşam</title>

    <!-- Custom fonts for this template-->
    <link href="~/manage/vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">
    <!-- Custom styles for this template-->
    <link href="~/manage/css/sb-admin-2.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/style.css">


</head>

<body class="Account">
    <div class="container">
        <!-- Outer Row -->
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-6">
                <div class="card o-hidden border-0 shadow-lg my-5">
                    <div class="card-body p-0">
                        <!-- Nested Row within Card Body -->
                        <div class="row">

                            <div class="col-lg-12">
                                <div class="p-5">
                                    <div class="text-center">
                                        <h1 class="h4 text-gray-900 mb-2">Şifrənizi unutmusunuz?</h1>
                                        <p class="mb-4">
                                            Yeni şifrənizi daxil edin
                                        </p>
                                    </div>
                                    <div asp-validation-summary="ModelOnly" class="text text-danger">
                                    </div>
                                    <form class="user" asp-controller="Account" asp-action="ChangePassword">
                                        <input type="hidden" asp-for="Token" />
                                        <input type="hidden" asp-for="Id" />
                                        <div class="form-group">
                                            <input asp-for="Password" class="form-control form-control-user"
                                                   placeholder="Yeni şifrənizi daxil edin">
                                            <span class="text-danger" asp-validation-for="Password"></span>
                                        </div>
                                        <div class="form-group">
                                            <input asp-for="ConfirmPassword" class="form-control form-control-user"
                                                   placeholder="Yeni şifrənizi təsdiq edin">
                                            <span class="text-danger" asp-validation-for="ConfirmPassword"></span>

                                        </div>
                                        <button type="submit" class="btn btn-user btn-block">
                                            Şifrəni Yenilə
                                        </button>
                                    </form>
                                    <hr>
                                    <div class="text-center">
                                        <a class="small" asp-controller="Account" asp-action="SignUp">Yeni profil yaradın</a>
                                    </div>
                                    <div class="text-center">
                                        <a class="small" asp-controller="Account" asp-action="Login">Artıq profiliniz var? Daxil olun!</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>

        </div>

    </div>

    <!-- Bootstrap core JavaScript-->
    <script src="~/manage/vendor/jquery/jquery.min.js"></script>
    <script src="~/manage/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/manage/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/manage/js/sb-admin-2.min.js"></script>

</body>

</html>